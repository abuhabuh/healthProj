<div class='patient-main-hor' style='clear:both'>
  <div class='col-name'>
    <% if (last_name && last_name.trim != '') { %>
      <%= last_name %>,
    <% } %>
    <%= first_name %>
    <% if (middle_initial && middle_initial.trim != '') { %>
      <%= middle_initial %>.
    <% } %>
  </div>
  <div class='col-mrn'>
    MRN: <%= medical_record_id %>
  </div>
  <div class='col-dob'>
    DOB: <%= date_of_birth %>
  </div>
  <div class='col-age'>
    Age: <%= calculateAge(date_of_birth) %>
  </div>
  <div class='col-sex'>
    <%= gender %>
  </div>
</div>

<!-- Do not show link to detail patient view if we already here -->
<% if (!show_single) { %>
  <div class='patient-detail-hor font-table-section-header' style='clear:both'>
    <a href='/patients#/<%= id %>'>Patient Details</a>
  </div>
<% } %>

<div class='patient-detail-hor' style='clear:both'>
  <div class='column1'>
    <div style='clear:both'>
      Address 1: <%= address1 %>
    </div>
    <div style='clear:both'>
      Address 2: <%= address2 %>
    </div>
    <div style='clear:both'>
      City: <%= city %>
    </div>
    <div style='clear:both'>
      State: <%= state %>
    </div>
  </div>
  <div class='column2'>
    <div style='clear:both'>
      Home Phone: <%= home_phone %>
    </div>
    <div style='clear:both'>
      <a href='#/<%= id %>/edit'>Edit</a>
    </div>
    <div style='clear:both'>
      <a href='/patients/<%= id %>/surgical_profiles'>Surgical Profiles</a>
    </div>
  </div>
</div>
