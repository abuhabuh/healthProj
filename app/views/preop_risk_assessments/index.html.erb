<h1>Listing preop_risk_assessments</h1>

<table>
  <thead>
    <tr>
      <th>Surgical profile</th>
      <th>Bit field</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Diabetes mellitus</th>
      <th>Functional health status</th>
      <th>Sepsis within 48hrs</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @preop_risk_assessments.each do |preop_risk_assessment| %>
      <tr>
        <td><%= preop_risk_assessment.surgical_profile_id %></td>
        <td><%= preop_risk_assessment.bit_field %></td>
        <td><%= preop_risk_assessment.height %></td>
        <td><%= preop_risk_assessment.weight %></td>
        <td><%= preop_risk_assessment.diabetes_mellitus %></td>
        <td><%= preop_risk_assessment.functional_health_status %></td>
        <td><%= preop_risk_assessment.sepsis_within_48hrs %></td>
        <td><%= link_to 'Show', preop_risk_assessment %></td>
        <td><%= link_to 'Edit', edit_preop_risk_assessment_path(preop_risk_assessment) %></td>
        <td><%= link_to 'Destroy', preop_risk_assessment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

